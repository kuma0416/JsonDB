<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>清單列表</title>
    <style>
        div {
            margin: 20px;
        }
        header {
            display: block;
            text-align: center;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            color: white;
            position: fixed;
            top: 0;
            font-family: Arial;
            height: 60px;
            font-size:25px;
            width:100%;
            left: 0;
            padding-top:20px;
        }

        #listSpace {
            width: 60%;
        }

        #listform {
            text-align: top;
            text-align: left;
            width: 60px;
        }

        #loginForm {
            margin-top: 100px;
            width: 40%;
            height: 30px;
        }
    </style>
</head>
<body>
    <div>
    <header>數學建模黑客松</header>
    </div>
    <div id="loginForm">
            <% if (username) { %>
                <a class="btn" href="/logout">登出</a>
            <% } else { %>
                <a class="btn" href="/login">登入</a>
            <% } %>
        </div>
    <% if (username) { %>
    <div id="listSpace">
        <h2>器材新增</h2>
        <form id="list" method="POST">
            <div>
                <fieldset style="width: 40%;">
                    <div>名稱:<input type="text" name="itemName" id="itemName"></div>
                    <div>組別:<input type="text" name="team" id="team"></div>
                    <input id="send" type="submit" value="送出">
                </fieldset>
            </div>
        </form>
    </div>
    <% } %>
    <br>
    <div class="listform">
    <h2>清單</h2>
    <% for(var i=0; i<posts.length; i++){ %>
        <%= posts[i].team %>--<%= posts[i].itemName %>
        by.<%= posts[i].author %>
            <% if (username==posts[i].author) { %>
            <a href="/posts/delete/<%= posts[i].id %>">刪除</a>
        <% } %>
        <hr>
    <% } %>
    </div>
</body>
</html>